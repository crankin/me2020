<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }} + {{ site.title }}</title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>
  <div class="main work">
  <header>
    <h1>{{ site.title }}</h1>
  </header>

  <nav>
    {% include "nav.njk" %}
  </nav>

  <section class="wtext">
      <h2>{{ title }}</h2>
      <h4>{{ types }}</h4>
      {{ content | safe }}
  </section>

  <section class="wimages">
    {% for item in images %}
    <img src="../../images/{{ item.img }}" alt="{{ item.alt }}">
    {% endfor %}
  </section>

  {% include "footer.njk" %}

  </div>
</body>
</html>
