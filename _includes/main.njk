<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>{{ title }} + {{ site.title }}</title>
  <link rel="stylesheet" href="/css/main.css">
</head>

<body>
  <div class="main">
  <header>
    <h1>{{ site.title }}</h1>
  </header>

  <nav>
    {% include "nav.njk" %}
  </nav>

  <section>
      {{ content | safe }}
  </section>

  <section>
    {% for item in images %}
    <img src="images/{{ item.img }}" alt="{{ item.alt }}">
    {% endfor %}
  </section>
  </div>

  {% include "footer.njk" %}

</body>
</html>
